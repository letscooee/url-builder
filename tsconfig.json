{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "outDir": "./dist",
        "strictPropertyInitialization": false,
        "noImplicitAny": false,
        "declaration": true,
        "strictNullChecks": false,
        "sourceMap": true,
        "lib": [
            "dom",
            "es6",
            "es5"
        ]
    },
    "exclude": [
        "node_modules",
        "./src/**/*.spec.ts"
    ],
    "include": [
        "src/**/*"
    ]
}
